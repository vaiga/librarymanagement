@model Librarymanagement.Models.Request

@{
    ViewData["Title"] = "View";
}

<h2>REQUEST</h2>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="request">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <dt>
                @Html.HiddenFor(model => model.UserId)
            </dt>


            <div class="form-group">
                <label asp-for="BookName" class="control-label"></label>
                <input asp-for="BookName" class="form-control" />
                <span asp-validation-for="BookName" class="text-danger"></span>
            </div>
            <div>
                @if (ViewBag.BookRequestStatus != null)
                {
                <label>@ViewBag.BookRequestStatus</label>
                }
            </div>


            <div class="form-group">
                <input type="submit" value="request" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    @{
        UserDetails user = new UserDetails();
        user.UserId = Model.UserId;
    }
    @Html.ActionLink("Back", "User", "Home", user)
</div>



