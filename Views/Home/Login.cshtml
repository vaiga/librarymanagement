@model Librarymanagement.Models.UserDetails
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MailId" class="control-label">Mail Id</label>
                <input asp-for="MailId" class="form-control" />
                <span asp-validation-for="MailId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            
            <div>
                @if (ViewBag.InvalidCredentials!=null)
                {
                     <label>@ViewBag.InvalidCredentials</label>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Login"  class="btn btn-default" />
            </div>
        </form>
    </div>
</div>





